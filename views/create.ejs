                <option value="taylorswift">Taylor Swift</option>
                <option value="fearless">Fearless</option>
                <option value="speaknow">SpeakNow</option>
                <option value="Red">Red</option>
                <option value="1989">1989</option>
                <option value="reputation">Reputation</option>
                <option value="Lover">Lover</option>
                <option value="evermore">Evermore</option>
                <option value="folklore">folklore</option>
                <option value="midnights">Midnight</option>
            </select>
            </p>
            <p>
              <label for="mensaje" class="colocar_mensaje">Mensaje de felicitaciones para karely
                <span class="obligatorio">*</span>
              </label>
              <textarea name="mensaje" class="texto_mensaje" id="mensaje" required="obligatorio" placeholder="Deja aquí tu felicitacion a la cumpleañera"></textarea>
            </p>
    
            <button type="submit" class="btn btn-primary" tabindex="5" >Guardar</button>
            <a href="/" class="btn btn-secondary">Cancelar</a>
    
          </form>

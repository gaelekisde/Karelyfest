            <p>
              <label for="telefono" class="colocar_email">Numero de telefono
                <span class="obligatorio">*</span>
              </label>
              <input type="number" id="telefono" name="telefono" required="obligatorio" placeholder="Escribe tu telefono">
            </p>
            <p>
              <label for="website" class="colocar_website">DressCode
              </label>
              <select id="dresscode" name="dresscode">
